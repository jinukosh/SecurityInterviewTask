extends layout

block content
  img.image(src='https://mcusercontent.com/917bb33189f0077b580a3e709/images/db944f9e-82b5-44cc-828e-7cc3bb8d5100.png' )
  p Security Engineer Hands-on task - Node.js[Express] and MongoDB

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        strong Credit Card:
        |  <span id='userInfoCard'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
    // /USER INFO

    // USER LIST
    h2 User List
    .userList
      table
        thead
          th UserName
          th Email
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserCard(type='text', placeholder='Credit Card')
        br
        button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER